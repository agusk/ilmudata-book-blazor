@page "/eventhandling"
@rendermode InteractiveServer

<h3>Event Handling in Blazor</h3>

<div>
    <label>Enter your name:</label>
    <input @bind="UserName" placeholder="Your name" class="form-control mb-2" />

    <label>Agree to terms:</label>
    <input type="checkbox" @bind="IsChecked" class="form-check-input mb-2" />

    <button @onclick="SubmitData" class="btn btn-primary" disabled="@(!IsChecked)">Submit</button>

    <div class="mt-3">

        @if (!string.IsNullOrEmpty(SubmittedData))
        {
            <p><strong>Submitted Data:</strong> @SubmittedData</p>
        }

    </div>
</div>

@code {
    private string UserName { get; set; } = string.Empty;
    private bool IsChecked { get; set; } = false;
    private string SubmittedData { get; set; } = string.Empty;

    private void SubmitData()
    {
        SubmittedData = $"Name: {UserName}";
    }
}